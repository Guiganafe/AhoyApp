<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/login_logo_img" />
    
    <EditText
        android:id="@+id/phone_number_input"
        android:layout_below="@id/login_logo"
        android:textAlignment="center"
        android:textColor="#36C9D2"
        android:textColorHint="#36C9D2"
        android:textColorLink="#36C9D2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:hint="Número de telefone"
        android:inputType="phone"
        android:background="@drawable/edittext_shape"
        />

    <Button
        android:id="@+id/send_verification_code"
        android:layout_below="@id/phone_number_input"
        android:layout_width="170dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:hint="Enviar código de verificação"
        android:background="@drawable/button_shape"
        android:textColorHint="@android:color/white"/>

    <EditText
        android:id="@+id/phone_code_input"
        android:layout_below="@id/send_verification_code"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="#36C9D2"
        android:textColorHint="#36C9D2"
        android:textColorLink="#36C9D2"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:hint="Código de verificação"
        android:visibility="invisible"
        android:background="@drawable/edittext_shape"
        />

    <Button
        android:id="@+id/verify_code"
        android:layout_below="@id/phone_code_input"
        android:layout_width="170dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:hint="Validar código de verificação"
        android:visibility="invisible"
        android:background="@drawable/button_shape"
        android:textColorHint="@android:color/white"
        />

</RelativeLayout>